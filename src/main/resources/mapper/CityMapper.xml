<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaankaplan.movieService.dao.mapper.CityMapper">
    <select id="getCitiesByMovieMovieId" parameterType="java.lang.Integer" resultType="com.kaankaplan.movieService.entity.CityMovie">
        <![CDATA[
          SELECT A.CITY_ID cityId, A.CITY_NAME cityName, B.MOVIE_NAME movieName
            FROM CITY A, MOVIE B
           WHERE B.MOVIE_ID = #{movieId}
             AND A.MOVIE_ID = B.MOVIE_ID
    ]]>
    </select>
</mapper>
